{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "declaration": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "removeComments": true,
        "newLine": "LF",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "lib": ["es5", "es6"]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "build",
        "node_modules",
        "**/*.spec.ts"
    ]
}